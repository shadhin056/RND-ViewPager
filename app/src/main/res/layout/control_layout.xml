<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/btnRemovePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove_page"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            tools:text="Remove Page"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOrientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnRemovePage"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/btnAddPage"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_page"
            tools:text="Add Page" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>